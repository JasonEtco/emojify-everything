{
  "manifest_version": 2,
  "version": "1.0.1",
  "minimum_chrome_version": "49",

  "name": "Emojify Everything",
  "short_name": "Emojification",
  "description": "There aren't enough emojis in your websites. This extension fixes that.",

  "author": "Jason Etcovitch",
  "homepage_url": "https://github.com/JasonEtco/emojify-everything",

	"icons": {
    "16": "icons/icon16.png",
	  "48": "icons/icon48.png",
	  "128": "icons/icon128.png"
  },

	"browser_action": {
  	"default_icon": "icons/icon128.png"
	},

  "permissions": [
    "storage"
  ],

  "content_scripts": [{
    "js": ["simpleEmojis.js", "emojis.js", "main.js"],
    "matches": ["*://*/*"],
    "run_at": "document_end"
  }],

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
